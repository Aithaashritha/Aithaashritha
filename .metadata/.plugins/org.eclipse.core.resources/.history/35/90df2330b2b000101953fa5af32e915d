# MySQL Database Configuration
spring.datasource.url=jdbc:mysql://localhost:3306/shopping_mall
spring.datasource.username=root
spring.datasource.password=Myuser@2002

# Hibernate Configuration
spring.jpa.hibernate.ddl-auto=update        # Only updates schema, does not drop tables
spring.jpa.show-sql=true                    # Show SQL queries in console
spring.jpa.properties.hibernate.format_sql=true  # Format SQL for readability
spring.jpa.open-in-view=false               # Optional: safer lazy loading

# Server Configuration
server.port=8081

# Optional Hikari Connection Pool (improves performance)
spring.datasource.hikari.maximum-pool-size=10
spring.datasource.hikari.minimum-idle=5
